{
  "name": "swagger-mcp-tools",
  "version": "0.2.0",
  "description": "Swagger MCP Server - 一个用于 Cursor 等 MCP 客户端的 Swagger API 文档查询工具",
  "type": "module",
  "main": "./dist/mcp-server.js",
  "bin": {
    "swagger-mcp-tools": "./dist/mcp-server.js"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "esbuild mcp-server.ts --bundle --platform=node --format=esm --outfile=dist/mcp-server.js --external:@modelcontextprotocol/sdk --external:zod --banner:js='#!/usr/bin/env node'",
    "dev": "tsx mcp-server.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "swagger",
    "openapi",
    "mcp",
    "model-context-protocol",
    "cursor",
    "api-documentation",
    "api-tools",
    "swagger-tools",
    "mcp-server"
  ],
  "author": "dyq086",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^17.0.3",
    "esbuild": "^0.19.0",
    "tsx": "^4.7.0",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dyq086/swagger-mcp-tools.git"
  },
  "bugs": {
    "url": "https://github.com/dyq086/swagger-mcp-tools/issues"
  },
  "homepage": "https://github.com/dyq086/swagger-mcp-tools#readme"
}
